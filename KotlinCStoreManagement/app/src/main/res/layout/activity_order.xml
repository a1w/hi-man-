<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center|top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/order1"
            android:foreground="@drawable/selector_foreground"
            android:stateListAnimator="@drawable/lift_on_touch"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/touming"
            android:drawableTop="@mipmap/icon_chengbao"
            android:gravity="center"
            android:text="@string/contract_order"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/order3"
            android:foreground="@drawable/selector_foreground"
            android:stateListAnimator="@drawable/lift_on_touch"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/touming"
            android:drawableTop="@mipmap/icon_chengbaoyilan"
            android:gravity="center"
            android:text="@string/contract_order_toview"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>

</LinearLayout>