<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cstore.zhiyazhang.cstoremanagement.view.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:transitionName="gg1"
                android:id="@+id/gg1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_phoeo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_photo"/>

            </LinearLayout>

            <LinearLayout
                android:transitionName="gg2"
                android:id="@+id/gg2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_business"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commerce"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gg3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_shopping"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <LinearLayout
                android:id="@+id/gg4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_train"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/train"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gg5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_service"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maintain"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gg6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/cstore_white"
                android:elevation="3dp"
                android:foreground="@drawable/selector_foreground"
                android:gravity="center"
                android:orientation="vertical"
                android:stateListAnimator="@drawable/lift_on_touch">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_invest"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coi"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
