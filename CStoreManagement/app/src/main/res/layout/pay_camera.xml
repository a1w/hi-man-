<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:inner_corner_color="@color/pink"
        app:inner_corner_length="20dp"
        app:inner_corner_width="3dp"
        app:inner_height="100dp"
        app:inner_width="300dp"
        app:inner_scan_bitmap="@drawable/scan_icon_scanline"
        app:inner_scan_iscircle="true"
        app:inner_scan_speed="50"/>

</FrameLayout>